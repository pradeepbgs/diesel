{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "src",          // <-- use src as root
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*.ts",
    // "src/adaptor/node/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
